#!/system/bin/sh

LOG_TAG=wifi_debug

loge () {
    echo "$LOG_TAG: $@"
    /system/bin/log -t $LOG_TAG -p e "$@"
}

#################################################
loge "wifi_debug in"

# Intent can't be send before boot complete! 
# Wait for boot complete. 
while [ "`getprop sys.boot_completed`" != "1" ]
do
	loge "wait for boot complete"
	sleep 1
done
sleep 1


DBG="`getprop persist.logtool.wifi`"
loge "send WIFI dynamic debug broadcaast: $DBG"
if [ "$DBG" == "1" ]
then
    am broadcast -a Action_Dynamic_Debug_Broadcast -e DBG_VALUE 1
    setprop persist.logtool.wifi.wfd 1
else
    am broadcast -a Action_Dynamic_Debug_Broadcast -e DBG_VALUE 0
    setprop persist.logtool.wifi.wfd 0
fi

